<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.controltek.agenda.web.person.PersonBrowse"
        focusComponent="personsTable"
        lookupComponent="personsTable"
        messagesPack="com.controltek.agenda.web.person">
    <dsContext>
        <datasource id="personDs"
                    class="com.controltek.agenda.entity.Person"
                    view="_local"/>
        <groupDatasource id="personsDs"
                         class="com.controltek.agenda.entity.Person"
                         view="person-view">
            <query>
                <![CDATA[select e from agenda$Person e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="personsTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="personsTable"
                        datasource="personsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="personsTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="email"/>
                    </columns>
                    <rows datasource="personsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="personsTable.create"/>
                        <button id="editBtn"
                                action="personsTable.edit"/>
                        <button id="removeBtn"
                                action="personsTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="personDs">
                        <column width="250px">
                            <field property="name"/>
                            <field property="email"/>
                        </column>
                    </fieldGroup>
                    <fieldGroup/>
                    <upload/>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
